<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/pass_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your Pin to proceed"
                android:textAlignment="center"
                android:textAppearance="@style/heading1" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass_text"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_circle_outline" />

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_circle_outline" />

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_circle_outline" />

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_circle_outline" />
            </LinearLayout>

            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_centerHorizontal="true"
                android:text="Forgot PIN?"
                android:textAppearance="@style/body1"
                android:visibility="gone" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forgot"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_1" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_2" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_4" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_5" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_6" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_7" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_8" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_9" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/clear_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="50dp"
                        app:rippleColor="@color/colorAccent"
                        app:srcCompat="@drawable/ic_delete_white" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/k0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="70dp"
                        app:srcCompat="@drawable/ic_0" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        app:fabCustomSize="70dp"
                        app:maxImageSize="50dp"
                        app:rippleColor="@color/colorAccent"
                        app:srcCompat="@drawable/ic_backspace" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColor">@color/white87</item>
        <item name="android:itemTextAppearance">@style/subtitle1</item>
        <item name="actionBarItemBackground">@color/secondary</item>
        <item name="android:actionMenuTextColor">@color/white87</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/subtitle1</item>
        <item name="android:textAppearanceButton">@style/buttonText</item>
        <item name="textAppearanceBody1">@style/body1</item>
        <item name="textAppearanceBody2">@style/body2</item>
        <item name="textAppearanceHeadline1">@style/heading1</item>
        <item name="textAppearanceSubtitle1">@style/subtitle1</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="heading1" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="heading2" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="subtitle1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white87</item>
    </style>

    <style name="body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="buttonText" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:itemBackground">@color/light_grey</item>
        <item name="android:itemTextAppearance">@style/subtitle1</item>
        <item name="android:actionMenuTextColor">@color/white87</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:subMenuArrow">@drawable/ic_arrow_right</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textAppearance">@style/heading1</item>
    </style>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/light_grey</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/white87</item>
        <item name="android:textAppearance">@style/subtitle1</item>
        <item name="android:itemTextAppearance">@style/subtitle1</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownVerticalOffset">16dp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/white87</item>
        <item name="android:textColorHint">@color/white87</item>
        <item name="android:colorError">#42A5F5</item>
        <item name="android:textAppearance">@style/body1</item>
        <item name="counterTextAppearance">@style/body2</item>
        <item name="errorTextAppearance">@style/errorText</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>
    <style name="errorText" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#42A5F5</item>
    </style>

    <style name="datePickerDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white87</item>
        <item name="android:textColor">@color/white60</item>
        <item name="android:color">@color/white38</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/secondary</item>
        <item name="android:headerBackground">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/body1</item>
        <item name="android:endYear">2025</item>
        <item name="android:startYear">2010</item>
    </style>
</resources>
